<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <android.support.v7.widget.GridLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="6"
        app:columnCount="3"
        app:rowCount="3">

        <ImageButton
            android:id="@+id/topleft"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="titleClicked"
            app:layout_column="0"
            app:layout_row="0" />


        <ImageButton
            android:id="@+id/topright"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="titleClicked"
            app:layout_column="2"
            app:layout_row="0" />

        <ImageButton
            android:id="@+id/topmid"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="titleClicked"
            app:layout_column="1"
            app:layout_row="0" />

        <ImageButton
            android:id="@+id/midleft"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="titleClicked"
            app:layout_column="0"
            app:layout_row="1" />

        <ImageButton
            android:id="@+id/midmid"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="titleClicked"
            app:layout_column="1"
            app:layout_row="1" />

        <ImageButton
            android:id="@+id/midright"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="titleClicked"
            app:layout_column="2"
            app:layout_row="1" />

        <ImageButton
            android:id="@+id/botleft"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="titleClicked"
            app:layout_column="0"
            app:layout_row="2" />

        <ImageButton
            android:id="@+id/botmid"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="titleClicked"
            app:layout_column="1"
            app:layout_row="2" />

        <ImageButton
            android:id="@+id/botright"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="titleClicked"
            app:layout_column="2"
            app:layout_row="2" />
    </android.support.v7.widget.GridLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="center"
        android:textSize="24sp" />

    <Button
        android:id="@+id/reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="resetClicked"
        android:text="Resetti"
        android:textSize="30sp" />
</LinearLayout>